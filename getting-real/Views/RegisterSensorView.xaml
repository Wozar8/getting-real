<UserControl x:Class="getting_real_4.Views.RegisterSensorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Command="{Binding CancelCommand}" Content="Anuller" HorizontalAlignment="Left" Margin="10,272,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.289,0.601" />
        <Button Command="{Binding AddCommand}" Content="Tilfoej" HorizontalAlignment="Left" Margin="260,272,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="1.174,0.301" />
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Tilføj sensor"
                   VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="10,92,0,0" TextWrapping="Wrap"
                 Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
        <!-- UpdateSourceTrigger=PropertyChanged updates the view model the moment a key has been pressed -->
        <TextBox HorizontalAlignment="Left" Margin="170,92,0,0" TextWrapping="Wrap"
                 Text="{Binding Keys, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="10,71,0,0" TextWrapping="Wrap" Text="Type"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="170,71,0,0" TextWrapping="Wrap" Text="Nøgler"
                   VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap"
                 Text="{Binding SensorType, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="10,150,0,0" TextWrapping="Wrap" Text="Sensor type"
                   VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="170,171,0,0" TextWrapping="Wrap"
                 Text="{Binding  ConnectionType, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="170,150,0,0" TextWrapping="Wrap" Text="Forbindelsestype"
                   VerticalAlignment="Top" />

    </Grid>
</UserControl>