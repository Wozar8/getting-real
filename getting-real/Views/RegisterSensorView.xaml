<UserControl x:Class="getting_real_4.Views.RegisterSensorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid Margin="10">
		<Button Command="{Binding CancelCommand}" Content="Anuller" HorizontalAlignment="Left" Margin="0,262,0,0"
                VerticalAlignment="Top" />
		<Button Command="{Binding AddCommand}" Content="Tilfoej" HorizontalAlignment="Right" Margin="0,262,0,0"
                VerticalAlignment="Top" />
		<TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="Tilføj sensor"
                   VerticalAlignment="Top" FontSize="18" FontWeight="Bold" />
		<TextBox HorizontalAlignment="Left" Margin="0,82,0,0" TextWrapping="Wrap"
                 Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
		<!-- UpdateSourceTrigger=PropertyChanged updates the view model the moment a key has been pressed -->
		<TextBox HorizontalAlignment="Right" Margin="0,82,0,0" TextWrapping="Wrap"
                 Text="{Binding Keys, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
		<TextBlock HorizontalAlignment="Left" Margin="0,61,0,0" TextWrapping="Wrap" Text="Type"
                   VerticalAlignment="Top" />
		<TextBlock HorizontalAlignment="Right" Margin="0,61,0,0" TextWrapping="Wrap" Text="Nøgler"
                   VerticalAlignment="Top" />
		<TextBox HorizontalAlignment="Left" Margin="0,161,0,0" TextWrapping="Wrap"
                 Text="{Binding SensorType, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
		<TextBlock HorizontalAlignment="Left" Margin="0,140,0,0" TextWrapping="Wrap" Text="Sensor type"
                   VerticalAlignment="Top" />
		<TextBox HorizontalAlignment="Right" Margin="0,161,0,0" TextWrapping="Wrap"
                 Text="{Binding  ConnectionType, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="120" />
		<TextBlock HorizontalAlignment="Right" Margin="0,140,0,0" TextWrapping="Wrap" Text="Forbindelsestype"
                   VerticalAlignment="Top" />
		<CheckBox IsChecked="{Binding IsHome}" Content="Er hjemme?" HorizontalAlignment="Left" Margin="0,234,0,0" VerticalAlignment="Top"/>

	</Grid>
</UserControl>