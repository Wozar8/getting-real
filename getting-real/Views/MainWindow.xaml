<Window x:Class="getting_real_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:getting_real_4.Views"
        xmlns:vms="clr-namespace:getting_real_4.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:RegisterSensorViewModel}">  <!-- TODO: Research this more -->
                <views:RegisterSensorView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:SensorListingViewModel}">
                <views:SensorListingView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
        <!--<views:SensorListingView DataContext="{Binding CurrentViewModel}" /> -->
        <!-- <views:RegisterSensorView DataContext="{Binding CurrentViewModel}" /> -->
    </Grid>
</Window>